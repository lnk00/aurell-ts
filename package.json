{
	"name": "aurell",
	"version": "0.0.1",
	"author": "Damien Dumontet",
	"scripts": {
		"client:dev": "cd packages/client && bun run dev",
		"server:dev": "cd packages/server && bun run dev",
		"client:deploy": "cd packages/client && bun run deploy",
